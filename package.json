{
  "scripts": {
    "test": "node tools/testing/test-suite.js",
    "test:quick": "./tools/testing/quick-test.sh",
    "test:backend": "cd apps/backend && python -m pytest tests/",
    "test:frontend": "cd apps/frontend && npm run test",
    "pre-deploy": "npm run test && npm run build",
    "health-check": "curl -f http://localhost:8000/health && curl -f http://localhost:3000",
    "start-dev": "concurrently \"cd apps/backend && source venv/bin/activate && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000\" \"cd apps/frontend && npm run dev\"",
    "validate": "./tools/testing/quick-test.sh && echo 'All validations passed!'",
    "cleanup": "./tools/scripts/cleanup-repo.sh",
    "cleanup:advanced": "./tools/scripts/advanced-cleanup.sh",
    "monitor": "python tools/testing/health-monitor.py"
  },
  "devDependencies": {
    "axios": "^1.11.0"
  }
}
